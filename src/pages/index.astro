---
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../consts';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
        <main>
            <section style="padding: 6rem 0 3rem;">
                <h1 style="margin-bottom: .75rem;">Build with clarity and style.</h1>
                <p style="max-width: 48rem; font-size: 1.125rem;">
                    A clean, modern personal site to showcase your work, publications, and writing. Minimalist
                    layout, refined typography, and fast performance.
                </p>
            </section>

            <section>
                <h2 style="margin: 1rem 0;">Highlights</h2>
                <ul>
                    <li>Projects — explore selected work</li>
                    <li>Publications — papers and articles</li>
                    <li>Tutorials — educational content and code</li>
                    <li>Events — workshops and gatherings</li>
                </ul>
            </section>
        </main>
		<Footer />
	</body>
</html>
